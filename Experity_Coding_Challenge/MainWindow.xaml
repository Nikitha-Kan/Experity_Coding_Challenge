<Window x:Class="Experity_Coding_Challenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Experity_Coding_Challenge"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <StackPanel>
                <Button x:Name="btnRegister" Content="Register" Width="70px" Margin="0,20,0,20" Click="OnButtonClick" />
                <Button x:Name="btnDiagnose" Content="Diagnose" Width="70px" Click="OnButtonClick" />
                <ListBox x:Name="lstOutput"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
